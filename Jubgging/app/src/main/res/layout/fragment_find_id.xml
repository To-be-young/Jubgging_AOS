<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindIdFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/find_id_account_user_input_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintHeight_percent="0.3"
        android:background="@drawable/login_background_drawable"
        android:elevation="2dp"
        android:paddingHorizontal="@dimen/_20dp"
        android:paddingVertical="@dimen/_22_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_input_nickname_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/user_input_phone_num_cl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/find_id_account_user_email_tv"
                style="@style/inputTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_marginStart="3dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="11dp"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeStepGranularity="1dp"
                android:text="@string/find_account_user_nickname"
                app:layout_constraintBottom_toTopOf="@+id/find_id_account_user_pwd_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/find_id_account_user_pwd_et"
                style="@style/inputEditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintHeight_percent="0.414"
                android:textAlignment="textStart"
                android:hint=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/find_id_account_user_email_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_input_phone_num_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22_5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_input_nickname_cl">

            <TextView
                android:id="@+id/find_id_account_user_pwd_tv"
                style="@style/inputTextTheme"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="textStart"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="11dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeStepGranularity="1dp"
                app:layout_constraintHeight_percent="0.286"
                android:layout_marginStart="@dimen/_3dp"
                android:text="@string/find_account_user_phonenum"
                app:layout_constraintBottom_toTopOf="@+id/find_id_account_user_email_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_percent="0.152" />

            <EditText
                android:id="@+id/find_id_account_user_email_et"
                style="@style/inputEditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint=""
                android:textAlignment="textStart"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="11dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeStepGranularity="1dp"
                app:layout_constraintHeight_percent="0.414"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/find_id_account_user_pwd_tv" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_id_fin_bt"
        style="@style/buttonTextTheme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="@dimen/_30dp"
        android:background="@drawable/login_background_drawable"
        android:elevation="2dp"
        android:paddingVertical="@dimen/_12dp"
        android:paddingHorizontal="@dimen/_143dp"
        android:autoSizeMaxTextSize="13dp"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:text="@string/find_id_pw_fin_btn"
        android:textColor="@color/green_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.077"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>