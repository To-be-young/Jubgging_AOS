<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".view.FindAccountActivity">


    <ImageView
        android:id="@+id/app_title_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.265"
        android:layout_marginTop="@dimen/_30dp"
        android:src="@drawable/icon_app_title_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <com.google.android.material.tabs.TabLayout
        style="@style/tablayout"
        android:id="@+id/find_account_tl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.862"
        app:layout_constraintHeight_percent="0.2"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/_32dp"
        app:layout_constraintBottom_toTopOf="@+id/imsi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title_iv"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/light_grey"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/tablayout"
        app:tabTextColor="@color/brownish_grey">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기" />

    </com.google.android.material.tabs.TabLayout>


    <FrameLayout
        android:id="@+id/imsi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.862"
        android:layout_marginTop="@dimen/_22dp"
        app:layout_constraintTop_toBottomOf="@+id/find_account_tl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>