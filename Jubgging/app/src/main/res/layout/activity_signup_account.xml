<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signUpAccount"
            type="com.example.jubgging.view.SignUpAccountActivity" />

        <variable
            name="signUpVm"
            type="com.example.jubgging.viewmodel.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">


        <ImageView
            android:id="@+id/signup_app_title_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_30dp"
            android:src="@drawable/icon_app_title_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.264" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_user_input_cl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="@dimen/_30dp"
            android:background="@drawable/login_background_drawable"
            android:elevation="2dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/signup_first_fin_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_app_title_iv"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintWidth_percent="0.861">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signup_user_pwd_chk_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.268"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_user_pwd_cl">


                <TextView
                    android:id="@+id/signup_user_pwd_chk_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="@dimen/_3dp"
                    android:autoSizeStepGranularity="1dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/nanumgothic_regular"
                    android:minWidth="@dimen/_3dp"
                    android:text="@string/signup_pwd_chk"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_pwd_chk_et"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.299"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <EditText
                    android:id="@+id/signup_user_pwd_chk_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="@dimen/_3dp"
                    android:autoSizeStepGranularity="1dp"
                    android:autoSizeTextType="uniform"
                    android:hint=""
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_pwd_chk_notice_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_pwd_chk_tv" />

                <TextView
                    android:id="@+id/signup_user_pwd_chk_notice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    setPwdText="@{signupUserPwdEt.text.toString()}"
                    setPwdChkText="@{signupUserPwdChkEt.text.toString()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_pwd_chk_et" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signup_user_auth_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/signup_user_pwd_cl"
                app:layout_constraintHeight_percent="0.268"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_user_id_cl">


                <TextView
                    android:id="@+id/signup_user_auth_tv"
                    style="@style/inputTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_second_authenfication_tx"
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_auth_et"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.299"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintWidth_percent="0.789" />

                <!--code sent 여부에 따라 editTextEnable 처리-->
                <EditText
                    android:id="@+id/signup_user_auth_et"
                    style="@style/signUpInputTextTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="6"
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_id_auth_notice_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_auth_tv"
                    app:layout_constraintWidth_percent="0.787" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_user_id_code_auth_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeMaxTextSize="@dimen/_35dp"
                    android:autoSizeMinTextSize="@dimen/_3dp"
                    android:autoSizeStepGranularity="1dp"
                    android:autoSizeTextType="uniform"
                    setEmailCodeText="@{signupUserAuthEt.text.toString()}"
                    android:background="@drawable/round_btn_enable_selector"
                    android:enabled="false"
                    android:fontFamily="@font/nanumgothic_bold"
                    android:minWidth="20dp"
                    android:minHeight="10dp"
                    android:paddingHorizontal="@dimen/_19_5dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="확인"
                    android:textColor="@color/brownish_grey"
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_id_auth_notice_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/signup_user_auth_et"
                    app:layout_constraintTop_toTopOf="@+id/signup_user_auth_et"
                    app:layout_constraintWidth_percent="0.211" />

                <TextView
                    android:id="@+id/signup_user_id_auth_notice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_auth_et" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signup_user_pwd_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/signup_user_pwd_chk_cl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.268"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_user_auth_cl">


                <TextView
                    android:id="@+id/signup_user_pwd_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="@dimen/_3dp"
                    android:autoSizeStepGranularity="1dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/nanumgothic_regular"
                    android:minWidth="@dimen/_3dp"
                    android:text="비밀번호"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_pwd_et"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.302"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintWidth_percent="0.299" />

                <EditText
                    android:id="@+id/signup_user_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="@dimen/_3dp"
                    android:autoSizeStepGranularity="1dp"
                    android:autoSizeTextType="uniform"
                    android:hint=""

                    app:layout_constraintBottom_toTopOf="@+id/signup_user_pwd_notice_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_pwd_tv" />

                <TextView
                    android:id="@+id/signup_user_pwd_notice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    setPwdRegex="@{signupUserPwdEt.text.toString()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_pwd_et" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signup_user_id_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/signup_user_auth_cl"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="20dp">


                <TextView
                    android:id="@+id/signup_user_id_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="@dimen/_3dp"
                    android:autoSizeStepGranularity="1dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/nanumgothic_regular"
                    android:minWidth="@dimen/_3dp"
                    android:text="@string/login_email"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/signup_user_id_et"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.299"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <EditText
                    android:id="@+id/signup_user_id_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toTopOf="@+id/signup_user_id_notice_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_id_tv"
                    app:layout_constraintWidth_percent="0.787" />

                <TextView
                    android:id="@+id/signup_user_id_notice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_id_et" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_email_check_btn"
                    android:layout_width="63dp"
                    android:layout_height="36dp"
                    android:background="@drawable/round_btn_enable_selector"
                    setEmailText="@{signupUserIdEt.text.toString()}"
                    setNoticeTextView="@{signupUserIdNoticeTv}"
                    android:enabled="false"
                    android:fontFamily="@font/nanumgothic_bold"
                    android:minWidth="20dp"
                    android:minHeight="10dp"
                    android:paddingHorizontal="@dimen/_19_5dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="중복"
                    android:textColor="@color/brownish_grey"
                    app:layout_constraintBottom_toTopOf="@id/signup_user_id_notice_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.562"
                    app:layout_constraintStart_toEndOf="@+id/signup_user_id_et"
                    app:layout_constraintTop_toBottomOf="@+id/signup_user_id_tv"
                    app:layout_constraintVertical_bias="0.555"
                    app:layout_constraintWidth_percent="0.211" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_first_fin_btn"
            setEmailAuthFlag="@{signUpVm.emailAuthFlag.booleanValue()}"
            setPwdChkText="@{signupUserPwdChkEt.text.toString()}"
            setPwdText="@{signupUserPwdEt.text.toString()}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="@dimen/_72dp"
            android:autoSizeMinTextSize="@dimen/_3dp"
            android:autoSizeStepGranularity="@dimen/_21dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/square_btn_enable_selector"
            android:elevation="2dp"
            android:enabled="false"
            android:fontFamily="@font/nanumgothic_bold"
            android:paddingHorizontal="@dimen/_96dp"
            android:paddingVertical="@dimen/_12dp"
            android:text="@string/signup_first_fin_btn"
            android:textColor="@color/brownish_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/signup_user_input_cl"
            app:layout_constraintHeight_percent="0.061"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/signup_user_input_cl"
            app:layout_constraintTop_toBottomOf="@+id/signup_user_input_cl" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>