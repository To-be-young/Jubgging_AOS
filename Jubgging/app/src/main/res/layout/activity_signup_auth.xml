<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signUpAuth"
            type="com.example.jubgging.view.SignUpAuthActivity" />

        <variable
            name="signUpVm"
            type="com.example.jubgging.viewmodel.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <ImageView
            android:id="@+id/signup_app_title_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_app_title_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.264" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_user_input_cl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25dp"
            android:background="@drawable/login_background_drawable"
            android:elevation="2dp"
            android:paddingVertical="25dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_app_title_iv"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintWidth_percent="0.861">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background_drawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.861">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/signup_nickname_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/signup_pnum_cl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.268"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread_inside">


                    <TextView
                        android:id="@+id/signup_nickname_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:minWidth="@dimen/_3dp"
                        android:text="@string/signup_user_nickname"

                        app:layout_constraintBottom_toTopOf="@+id/signup_nickname_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.299"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/signup_nickname_et"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <EditText
                        android:id="@+id/signup_nickname_et"
                        style="@style/inputEditTextTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/signup_nickname_nt_tv"
                        app:layout_constraintEnd_toStartOf="@+id/signup_overlap_chk_btn"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_nickname_tv"
                        app:layout_constraintWidth_percent="0.81" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/signup_overlap_chk_btn"

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        setInputNickname ="@{signupNicknameEt.text.toString()}"
                        android:autoSizeMaxTextSize="13dp"
                        android:autoSizeMinTextSize="@dimen/_3dp"

                        android:autoSizeStepGranularity="1dp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/round_btn_enable_selector"
                        android:enabled="false"
                        android:fontFamily="@font/nanumgothic_bold"


                        android:minWidth="20dp"

                        android:minHeight="10dp"
                        android:paddingHorizontal="@dimen/_19_5dp"
                        android:paddingVertical="@dimen/_8dp"
                        android:stateListAnimator="@null"
                        android:text="중복"

                        android:textColor="@color/brownish_grey"
                        app:layout_constraintBottom_toBottomOf="@+id/signup_nickname_et"
                        app:layout_constraintDimensionRatio="1:0.473"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.573"
                        app:layout_constraintStart_toEndOf="@+id/signup_nickname_et"
                        app:layout_constraintTop_toBottomOf="@+id/signup_nickname_tv"
                        app:layout_constraintWidth_percent="0.211" />

                    <TextView
                        android:id="@+id/signup_nickname_nt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        setOverlapBtn="@{signupOverlapChkBtn}"
                        setUserInputEt="@{signupNicknameEt}"
                        setOverlapType="@{signUpVm.overlapType.second}"
                        setOverlapFlag="@{signUpVm.overlapFlag}"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_nickname_et" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/signup_pnum_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layout_constraintBottom_toTopOf="@+id/signup_pnum_auth_cl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_nickname_cl">


                    <TextView
                        android:id="@+id/signup_pnum_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:minWidth="@dimen/_3dp"
                        android:text="@string/signup_second_phonenum_tx"
                        app:layout_constraintBottom_toTopOf="@+id/signup_pnum_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.299"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/signup_pnum_et"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <EditText
                        android:id="@+id/signup_pnum_et"
                        style="@style/inputEditTextTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="13"

                        android:textSize="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/signup_pnum_nt_tv"
                        app:layout_constraintEnd_toStartOf="@+id/signup_pnum_code_send_btn"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_pnum_tv"
                        app:layout_constraintWidth_percent="0.81" />

                    <TextView
                        android:id="@+id/signup_pnum_nt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_pnum_et" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/signup_pnum_code_send_btn"
                        setPhoneNumberNoticeTv="@{signupPnumNtTv}"
                        setInputPhoneNumber="@{signupPnumEt.text.toString()}"

                        setCodeSentFlag="@{signUpVm.codeSentFlag}"
                        setUserInputEt="@{signupPnumEt}"
                        setCodeEt="@{signupPnumAuthEt}"

                        android:layout_width="0dp"
                        android:layout_height="0dp"

                        android:autoSizeMaxTextSize="13dp"
                        android:autoSizeMinTextSize="@dimen/_3dp"

                        android:autoSizeStepGranularity="1dp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/round_btn_enable_selector"
                        android:enabled="false"
                        android:fontFamily="@font/nanumgothic_bold"


                        android:minWidth="20dp"

                        android:minHeight="10dp"
                        android:paddingHorizontal="@dimen/_19_5dp"
                        android:paddingVertical="@dimen/_8dp"
                        android:stateListAnimator="@null"
                        android:text="인증"

                        android:textColor="@color/brownish_grey"
                        app:layout_constraintBottom_toBottomOf="@+id/signup_pnum_et"
                        app:layout_constraintDimensionRatio="1:0.473"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/signup_pnum_et"
                        app:layout_constraintTop_toBottomOf="@+id/signup_pnum_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/signup_pnum_auth_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHeight_percent="0.268"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_pnum_cl">


                    <TextView
                        android:id="@+id/signup_pnum_auth_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:minWidth="@dimen/_3dp"
                        android:text="@string/signup_second_authenfication_tx"
                        app:layout_constraintBottom_toTopOf="@+id/signup_pnum_auth_et"
                        app:layout_constraintHeight_percent="0.299"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintWidth_percent="0.81" />

                    <!--code sent 여부에 따라 editTextEnable 처리-->
                    <EditText
                        android:id="@+id/signup_pnum_auth_et"
                        style="@style/inputEditTextTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="16dp"
                        setCodeAuthBtn="@{signupPnumAuthBtn}"
                        setCodeNtTv="@{signupPnumAuthNtTv}"
                        setPassAuthFlag="@{signUpVm.passAuthFlag}"
                        app:layout_constraintBottom_toTopOf="@+id/signup_pnum_auth_nt_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_pnum_auth_tv"
                        app:layout_constraintWidth_percent="0.81" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/signup_pnum_auth_btn"

                        setCodeEt="@{signupPnumAuthEt}"

                        setCodeSentFlag="@{signUpVm.codeSentFlag}"
                        setCodeSentBtn="@{signupPnumCodeSendBtn}"
                        setAuthNtTv="@{signupPnumAuthNtTv}"
                        setTimeoutFlag="@{signUpVm.timeoutFlag}"


                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:autoSizeMaxTextSize="13dp"
                        android:autoSizeMinTextSize="@dimen/_3dp"
                        android:autoSizeStepGranularity="1dp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/round_btn_enable_selector"
                        android:enabled="false"
                        android:fontFamily="@font/nanumgothic_bold"
                        android:minWidth="20dp"
                        android:minHeight="10dp"
                        android:paddingHorizontal="@dimen/_19_5dp"
                        android:paddingVertical="@dimen/_8dp"
                        android:text="확인"

                        android:textColor="@color/brownish_grey"
                        app:layout_constraintBottom_toBottomOf="@+id/signup_pnum_auth_et"
                        app:layout_constraintDimensionRatio="1:0.473"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/signup_pnum_auth_et"
                        app:layout_constraintTop_toBottomOf="@+id/signup_pnum_auth_tv" />

                    <TextView
                        android:id="@+id/signup_pnum_auth_nt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_pnum_auth_et" />

                    <TextView
                        android:id="@+id/signup_pnum_auth_timer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_3_4dp"
                        android:autoSizeMaxTextSize="@dimen/_40dp"
                        android:autoSizeMinTextSize="@dimen/_3dp"
                        android:autoSizeStepGranularity="1dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/nanumgothic_bold"
                        android:gravity="center_horizontal"
                        android:text="@{signUpVm.PTimeoutText}"

                        android:textColor="@color/red"
                        app:layout_constraintBottom_toTopOf="@+id/signup_pnum_auth_btn"
                        app:layout_constraintEnd_toEndOf="@+id/signup_pnum_auth_btn"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/signup_pnum_auth_et"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside"
                        app:layout_constraintWidth_percent="0.049" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_fin_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:background="@drawable/square_btn_enable_selector"
            android:elevation="2dp"
            android:enabled="false"
            android:fontFamily="@font/nanumgothic_bold"
            android:textSize="16dp"
            setPassAuthFlag="@{signUpVm.passAuthFlag}"
            setOverlapFlag="@{signUpVm.overlapFlag}"
            android:paddingHorizontal="@dimen/_96dp"
            android:paddingVertical="@dimen/_12dp"
            android:text="@string/signup_finish_btn"
            android:textColor="@color/brownish_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0.126"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.861" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>